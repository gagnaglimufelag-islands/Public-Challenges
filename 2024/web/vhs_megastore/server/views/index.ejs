<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VHS MegaStore</title>
    <style>
        /* Modal styles */

        h1,h2 {
            text-align: center;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0, 0, 0);
            background-color: rgba(0, 0, 0, 0.4);
            padding-top: 60px;
        }

        .modal-content {
            background-color: #fefefe;
            margin: 5% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <h1>VHS MegaStore</h1>
    <h2>Current Storage</h2>

    <% Object.keys(vhs_storage).forEach(vhs => { %>
        <ul>
            <li>
                <form>
                    <input type="hidden" name="vhs" value="<%= vhs_storage[vhs].name %>">
                    <input type="hidden" name="vhs_owner" value="<%= vhs_storage[vhs].owner %>">
                    <span id="<%= vhs_storage[vhs].name %>-data">
                        <strong><%= vhs_storage[vhs].name %></strong>- owned by <%= vhs_storage[vhs].owner %>
                    </span>
                    <br/>
                    <span id="description">
                    <%= vhs_storage[vhs].description %></span>
                    
                    <button type="button" class="retrieve-btn">Retrieve</button>
                </form>
            </li>
        </ul>
    <% }) %>

    <div id="response"></div>
    <em>
        <div id="description"></div>
    </em>

    <!-- Modal -->
    <div id="retrieveModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            
            <span>Hey <span id="ownerName"></span>!</span>
            <p>Please enter your 10-digit code to retrieve:</p>
            <input type="text" id="codeInput" maxlength="10" pattern="\d{10}" required>
            <button id="submitCode">Submit</button>
        </div>
    </div>

    <script>
    
        // Get modal elements
        const modal = document.getElementById("retrieveModal");
        const span = document.getElementsByClassName("close")[0];
        const submitCodeButton = document.getElementById("submitCode");
    
        // When a "Retrieve" button is clicked
        document.querySelectorAll('.retrieve-btn').forEach(button => {
            button.addEventListener('click', event => {
                event.preventDefault();
                const vhsData = button.closest('form').querySelector('span').innerText.split('- owned by');
                const vhs = vhsData[0].trim(); // Capture VHS name from the split array
                const owner = vhsData[1].trim(); // Capture owner name from the split array
                document.getElementById('ownerName').innerText = owner; // Set owner name in modal
                document.getElementById('codeInput').setAttribute('data-vhs', vhs); // Set data attribute to hold VHS name
                modal.style.display = "block";
            });
        });
    
        // When the user clicks on <span> (x), close the modal
        span.onclick = function () {
            modal.style.display = "none";
        }
    
        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    
        // Handle submit code
        submitCodeButton.addEventListener('click', async () => {
            const code = document.getElementById('codeInput').value;
            if (code.length === 10 && !isNaN(code)) {
                modal.style.display = "none";
                const vhs = document.getElementById('codeInput').getAttribute('data-vhs'); // Get VHS name from data attribute
                const owner = document.getElementById('ownerName').innerText; // Get owner name from modal
                const url = `/api/v1/retrieve`;
                const response = await fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        vhs: vhs,
                        code: code,
                        owner_name: owner
                    })
                });
                if (response.ok) {
    try {
        const html = await response.text(); // Get the response body as text
        document.body.innerHTML = html; // Render the HTML content on the current page
    } catch (error) {
        console.error('Error rendering HTML content:', error);
    }


                } else {
                    const error = await response.text();
                    alert(error);
                }
            } else {
                alert("Please enter a valid 10-digit code.");
            }
        });
    </script>
    
</body>

</html>
